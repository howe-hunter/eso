<GuiXml>
	<Controls>
		<TopLevelControl name="LUIE_StatPanel" mouseEnabled="true" movable="true" clampedToScreen="true" hidden="true" layer="0" level="0" tier="0">
			<Dimensions x="110" y="200" />
			<Anchor point="BOTTOM" relativeTo="GuiRoot" relativePoint="CENTER" />
			<OnMoveStop>

			</OnMoveStop>
			<Controls>

                <Backdrop name="$(parent)_Background" centerColor="000000" edgeColor="545454" alpha="1" >
		          	<Dimensions x="110" y="200" />
		          	<Anchor point="CENTER" relativeTo="$(parent)" />
                    <Edge edgeSize="2" />
		        </Backdrop>

	          	<Label name="$(parent)_Damage" color="FFFFFF" font="$(BOLD_FONT)|28|thin-outline" inheritAlpha="true" wrapMode="TRUNCATE">
      				<Anchor point="TOPLEFT" relativeTo="$(parent)_Background" offsetX="5" />
    			</Label>
    			<Label name="$(parent)_DamageLabel" color="666666" font="$(BOLD_FONT)|12|thin-outline" inheritAlpha="true" wrapMode="TRUNCATE">
      				<Anchor point="TOPLEFT" relativeTo="$(parent)_Damage" relativePoint="TOPRIGHT" offsetX="2" />
    			</Label>

                <Label name="$(parent)_Critical" color="FFFFFF" font="$(BOLD_FONT)|28|thin-outline" inheritAlpha="true" wrapMode="TRUNCATE">
      				<Anchor point="BOTTOMLEFT" relativeTo="$(parent)_Damage" offsetY="30" />
    			</Label>
    			<Label name="$(parent)_CriticalLabel" color="666666" font="$(BOLD_FONT)|12|thin-outline" inheritAlpha="true" wrapMode="TRUNCATE">
      				<Anchor point="TOPLEFT" relativeTo="$(parent)_Critical" relativePoint="TOPRIGHT" offsetX="2" />
    			</Label>

                <Label name="$(parent)_Penetration" color="FFFFFF" font="$(BOLD_FONT)|28|thin-outline" inheritAlpha="true" wrapMode="TRUNCATE">
      				<Anchor point="BOTTOMLEFT" relativeTo="$(parent)_Critical" offsetY="30" />
    			</Label>
    			<Label name="$(parent)_PenetrationLabel" color="666666" font="$(BOLD_FONT)|12|thin-outline" inheritAlpha="true" wrapMode="TRUNCATE">
      				<Anchor point="TOPLEFT" relativeTo="$(parent)_Penetration" relativePoint="TOPRIGHT" offsetX="2" />
    			</Label>

                <Label name="$(parent)_SpellResist" color="FFFFFF" font="$(BOLD_FONT)|28|thin-outline" inheritAlpha="true" wrapMode="TRUNCATE">
      				<Anchor point="BOTTOMLEFT" relativeTo="$(parent)_Penetration" offsetY="30" />
    			</Label>
    			<Label name="$(parent)_SpellResistLabel" color="666666" font="$(BOLD_FONT)|12|thin-outline" inheritAlpha="true" wrapMode="TRUNCATE">
      				<Anchor point="TOPLEFT" relativeTo="$(parent)_SpellResist" relativePoint="TOPRIGHT" offsetX="2" />
    			</Label>

                <Label name="$(parent)_PhysicalResist" color="FFFFFF" font="$(BOLD_FONT)|28|thin-outline" inheritAlpha="true" wrapMode="TRUNCATE">
      				<Anchor point="BOTTOMLEFT" relativeTo="$(parent)_SpellResist" offsetY="30" />
    			</Label>
    			<Label name="$(parent)_PhysicalResistLabel" color="666666" font="$(BOLD_FONT)|12|thin-outline" inheritAlpha="true" wrapMode="TRUNCATE">
      				<Anchor point="TOPLEFT" relativeTo="$(parent)_PhysicalResist" relativePoint="TOPRIGHT" offsetX="2" />
    			</Label>

                <Label name="$(parent)_CriticalResist" color="FFFFFF" font="$(BOLD_FONT)|28|thin-outline" inheritAlpha="true" wrapMode="TRUNCATE">
                    <Anchor point="BOTTOMLEFT" relativeTo="$(parent)_PhysicalResist" offsetY="30" />
                </Label>
                <Label name="$(parent)_CriticalResistLabel" color="666666" font="$(BOLD_FONT)|12|thin-outline" inheritAlpha="true" wrapMode="TRUNCATE">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)_CriticalResist" relativePoint="TOPRIGHT" offsetX="2" />
                </Label>

    		</Controls>
		</TopLevelControl>
	</Controls>
</GuiXml>
